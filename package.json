{
  "name": "frontend-to-ir",
  "version": "0.1.0",
  "private": true,
  "description": "Convert frontend source code (TS/JS + frameworks) into an IR that can be consumed by java-to-xmi.",
  "license": "MIT",
  "main": "dist/index.js",
  "bin": {
    "frontend-to-ir": "dist/cli.js"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json && node scripts/postbuild.cjs",
    "dev": "node -r ts-node/register src/cli.ts --help",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rm -rf dist",
    "test:coverage": "jest --coverage",
    "coverage": "npm run test:coverage"
  },
  "dependencies": {
    "commander": "^12.1.0",
    "fast-glob": "^3.3.2",
    "typescript": "^5.7.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.12",
    "@types/node": "^22.13.5",
    "ajv": "^8.17.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2"
  }
}
